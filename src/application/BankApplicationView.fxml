<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="396.0" prefWidth="619.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.BankApplicationLoginController">
   <children>
      <HBox alignment="CENTER" prefHeight="119.0" prefWidth="619.0">
         <children>
            <Label alignment="TOP_CENTER" text="Bank of Ayan">
               <font>
                  <Font name="Lucida Bright Demibold" size="30.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="67.0" prefWidth="599.0">
         <children>
            <Label alignment="CENTER" text="Please sign in to gain access to online banking" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="47.0" prefWidth="514.0">
         <children>
            <Label text="Account Number">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Franklin Gothic Medium" size="15.0" />
               </font>
               </Label>
            <TextField fx:id="accountNumberTextField" prefHeight="31.0" prefWidth="300.0" promptText="000000-0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Password">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font name="Franklin Gothic Medium" size="15.0" />
               </font>
               <padding>
                  <Insets top="20.0" />
               </padding></Label>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="showPasswordTextField" layoutY="28.0" prefHeight="31.0" prefWidth="300.0" />
                  <PasswordField fx:id="passwordTextField" layoutY="28.0" prefHeight="31.0" prefWidth="300.0" />
               </children>
            </AnchorPane>
            <RadioButton fx:id="showPasswordRadioButton" mnemonicParsing="false" onAction="#showPassword" text="Show Password">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </RadioButton>
         </children>
         <VBox.margin>
            <Insets left="35.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Remember Me">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <CheckBox fx:id="rememberMeCheckBox" mnemonicParsing="false">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </CheckBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Hyperlink fx:id="forgotPasswordHyperLink" onAction="#forgotPassword" text="Forgot Password">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Hyperlink>
            <Button fx:id="signInButton" mnemonicParsing="false" onAction="#signIn" text="Sign In">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
